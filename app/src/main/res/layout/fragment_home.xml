<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff">

    <FrameLayout
        android:id="@+id/fragment_home_frame_layout_1"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:layout_marginBottom="30dp"
            android:src="@drawable/home_title"
            android:layout_gravity="top"/>

        <ImageView
            android:layout_width="30dp"
            android:layout_height="35dp"
            android:layout_marginTop="15dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/king"/>

            <TextView
                android:id="@+id/home_kcals"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginStart="16dp"
                android:textColor="#000"
                android:textSize="18sp"
                android:fontFamily="@font/noto_light"
                android:text="백선욱 님은 총\n420kcal를 소비했습니다." />

            <TextView
                android:id="@+id/home_steps"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:gravity="start"
                android:layout_gravity="center_vertical|end"
                android:fontFamily="@font/noto_light"
                android:textColor="#fff"
                android:text="총 활동량 \n 0.0 km"/>
    </FrameLayout>

    <ImageView
        android:id="@+id/fragment_home_graph_image_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/graph"
        app:layout_constraintTop_toBottomOf="@id/fragment_home_frame_layout_1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/fragment_home_navigation_linear_layout"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/fragment_home_navigation_linear_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fragment_home_graph_image_view">

        <ImageView
            android:id="@+id/button_trash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:srcCompat="@drawable/button_trash" />

        <LinearLayout
            android:id="@+id/fragment_home_near_bin_linear_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintLeft_toRightOf="@id/fragment_home_compass_fragment"
            app:layout_constraintRight_toLeftOf="@id/button_trash"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="가장 가까운 쓰레기통"
                android:textColor="@android:color/black"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="부산대역앞"
                android:textColor="@color/color_text_green"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="여기서 560m"
                android:textColor="@android:color/black"
                android:textSize="14sp" />
        </LinearLayout>

        <fragment
            android:id="@+id/fragment_home_compass_fragment"
            android:name="com.fivespecial.ploking.fragment.CompassFragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>