<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#fff"
    android:weightSum="5"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="200dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:layout_marginBottom="30dp"
            android:src="@drawable/home_title"
            android:layout_gravity="top"/>

        <ImageView
            android:layout_width="30dp"
            android:layout_height="35dp"
            android:layout_marginTop="15dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/king"/>

            <TextView
                android:id="@+id/home_kcals"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginLeft="16dp"
                android:textColor="#000"
                android:textSize="18sp"
                android:fontFamily="@font/noto_light"
                android:text="오늘 박철수님은\n420kcal를 소비했습니다."
                />

            <TextView
                android:id="@+id/home_steps"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="16dp"
                android:gravity="right"
                android:layout_gravity="center_vertical|right"
                android:fontFamily="@font/noto_light"
                android:textColor="#fff"
                android:text="오늘 걸음수\n7,533\n6.7km"/>
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/graph"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="horizontal"
        android:weightSum="3">

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <fragment
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/compass"
                android:name="com.fivespecial.ploking.Fragment.CompassFragment"/>

        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:layout_marginTop="25dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="가장 가까운 쓰레기통"
                android:textSize="14.7sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="부산대역앞"
                android:textSize="14.7sp"
                android:textColor="#3ea055"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="여기서 560m"
                android:textSize="14.7sp"/>
        </LinearLayout>



        <ImageView
            android:layout_weight="1"
            android:id="@+id/button_trash"
            android:layout_width="0dp"
            android:layout_height="65.5dp"
            android:layout_gravity="right|bottom"
            android:src="@drawable/button_trash" />

    </LinearLayout>


</LinearLayout>