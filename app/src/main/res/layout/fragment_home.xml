<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:weightSum="5"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="420dp"
            android:layout_height="218dp"
            android:layout_marginBottom="16dp"
            android:src="@drawable/home_title"
            android:layout_gravity="top"/>

        <ImageView
            android:layout_width="30dp"
            android:layout_height="35dp"
            android:layout_marginTop="15dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/king"/>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginLeft="16dp">
            <TextView
                android:id="@+id/text_h1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:textColor="#000"
                android:fontFamily="@font/noto_light"
                android:textSize="18sp"
                android:text="오늘 "/>
            <TextView
                android:id="@+id/text_h2"
                android:layout_toRightOf="@id/text_h1"
                android:fontFamily="@font/noto_medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:textSize="18sp"
                android:text="박철수"/>
            <TextView
                android:id="@+id/text_h3"
                android:layout_toRightOf="@id/text_h2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/noto_light"
                android:textColor="#000"
                android:textSize="18sp"
                android:text="님은"/>
            <TextView
                android:id="@+id/text_h4"
                android:layout_alignParentLeft="true"
                android:fontFamily="@font/noto_medium"
                android:textColor="#3ea055"
                android:layout_below="@id/text_h1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:text="420kcal"/>
            <TextView
                android:id="@+id/text_h5"
                android:layout_below="@id/text_h1"
                android:layout_toRightOf="@id/text_h4"
                android:fontFamily="@font/noto_light"
                android:textColor="#000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:text="를 소비했습니다."/>
        </RelativeLayout>
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        ></LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:weightSum="1"
        android:orientation="horizontal"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1"
            >

        </LinearLayout>

        <ImageView
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_gravity="right|bottom"
            android:src="@drawable/button_trash"/>
    </LinearLayout>



</LinearLayout>