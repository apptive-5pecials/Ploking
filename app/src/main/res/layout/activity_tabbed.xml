<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_text_white">

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/activity_tabbed_view_pager"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/activity_tabbed_tab_layout"/>

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/activity_tabbed_tab_layout"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:background="@drawable/v2_background_tab_layout_border_top"
        app:tabGravity="fill"
        app:tabMode="fixed"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>