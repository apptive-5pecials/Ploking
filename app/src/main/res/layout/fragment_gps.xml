<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="10">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="#fff"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textColor="#000"
            android:textSize="18sp"
            android:layout_marginLeft="16dp"
            android:fontFamily="@font/noto_light"
            android:text="쓰레기통 위치"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/fragmentBorc"/>

        <LinearLayout
            android:id="@+id/layout_inform"
            android:layout_width="303.7dp"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded"
            android:orientation="horizontal"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:weightSum="3"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="10dp"
                    android:lineSpacingExtra="9sp"
                    android:text="시간"
                    android:textColor="@color/gpsTitle"
                    android:textSize="14.7dp" />

                <TextView

                    android:id="@+id/tv_fragment_four_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="25dp"
                    android:lineSpacingExtra="9sp"
                    android:text="00:00"
                    android:textColor="@android:color/black"
                    android:textSize="20dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="10dp"
                    android:lineSpacingExtra="9sp"
                    android:text="이동 거리"
                    android:textColor="@color/gpsTitle"
                    android:textSize="14.7dp" />

                <TextView
                    android:id="@+id/tv_fragment_four_distance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="25dp"
                    android:lineSpacingExtra="9sp"
                    android:text="0.0 m"
                    android:textColor="@android:color/black"
                    android:textSize="20dp" />


            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="10dp"
                    android:lineSpacingExtra="9sp"
                    android:text="칼로리"
                    android:textColor="@color/gpsTitle"
                    android:textSize="14.7dp" />

                <TextView
                    android:id="@+id/tv_fragment_four_calorie"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="25dp"
                    android:lineSpacingExtra="9sp"
                    android:text="0 kcal"
                    android:textColor="@android:color/black"
                    android:textSize="20dp" />


            </LinearLayout>

        </LinearLayout>

        <ImageButton
            android:id="@+id/btn_fragment_four_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="50dp"
            android:background="@android:color/transparent"
            android:src="@drawable/start_button"
            android:visibility="visible"/>

        <LinearLayout
            android:id="@+id/layout_running"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="50dp"
            android:visibility="gone"
            >

            <ImageButton
                android:id="@+id/btn_fragment_four_pause"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@android:color/transparent"
                app:srcCompat="@drawable/pause_button" />

            <ImageButton
                android:id="@+id/btn_fragment_four_stop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="100dp"
                android:layout_marginLeft="100dp"
                android:background="@android:color/transparent"
                app:srcCompat="@drawable/stop_button" />


        </LinearLayout>




    </RelativeLayout>

</LinearLayout>